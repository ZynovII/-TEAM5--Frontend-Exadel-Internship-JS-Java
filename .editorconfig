root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2

[*.{tsx, ts, scss, css, html, json}]
indent_style = tab
indent_size = 2
tab_width = 2

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore

[*.{diff,md}]
trim_trailing_whitespace = false